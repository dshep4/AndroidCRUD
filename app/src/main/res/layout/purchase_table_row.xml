<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Item Name"
        android:textSize="30dp"
        android:id="@+id/purchase_table_itemName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchase_table_itemName"
        android:text="Available Units: "
        android:textSize="20dp"
        android:id="@+id/availableUnits" />
    <!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ems="2"
        android:textSize="30dp"
        android:editable="true"
        android:text="#"
        android:id="@+id/purchase_table_qty_desired"/>
        -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purchase_table_itemName"
        android:layout_toRightOf="@+id/availableUnits"
        android:text="10"
        android:textSize="20dp"
        android:id="@+id/purchase_table_qty"/>


    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:id="@+id/purchase_table_spinner"
        ></Spinner>



</RelativeLayout>