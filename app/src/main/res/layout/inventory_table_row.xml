<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25dp"
        android:id="@+id/inventory_row_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/inventory_row_qty"
        android:text="Qty:"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="#"
        android:textSize="25dp"
        android:layout_marginLeft="3dp"
        android:id="@+id/inventory_row_qty"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inventory_row_name"
        android:text="ID: "
        android:id="@+id/inventoryTableRowIDPlaceholder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inventory_row_name"
        android:layout_toRightOf="@+id/inventoryTableRowIDPlaceholder"
        android:text="#"
        android:id="@+id/inventory_row_id"/>
</RelativeLayout>